FROM mithrandi/ucd-base
MAINTAINER Tristan Seligmann <mithrandi@mithrandi.net>
COPY . /build
RUN ["mv", "/build/halcyon-cache", "/var/tmp/halcyon-cache"]
RUN ["/halcyon/halcyon", "install", "--no-build", "file:///build#HEAD"]
RUN ["mv", "/build/UCD.sqlite3", "/app"]
WORKDIR ["/app"]
ENTRYPOINT ["/app/bin/UCD"]
